    "constraints" : {
      "notEmpty" : true
    },
    "feel" : "optional",
    "group" : "default",
    "binding" : {
      "name" : "script.resource",
      "type" : "zeebe:input"
    },
    "condition" : {
      "property" : "script.type",
      "equals" : "resource",
      "type" : "simple"
    },
    "type" : "String"
